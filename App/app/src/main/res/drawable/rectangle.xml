<!-- res/drawable/rectangle_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Rectangle Layer -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of rectangle -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>
